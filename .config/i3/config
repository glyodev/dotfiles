  #bash -c 'until i3-msg -t get_workspaces >/dev/null 2>&1; do sleep 0.2; done; ~/.config/i3/polybar/launch.sh'

# --- Autostart ---
exec --no-startup-id xset s 600 600
exec --no-startup-id xset dpms 600 600 900
exec --no-startup-id xss-lock -- ~/.config/bspwm/scripts/lock.sh
exec --no-startup-id wmname LG3D

# Script monitores (el mismo que usas)
exec --no-startup-id ~/.screenlayout/resolucion.sh

# Extras

exec --no-startup-id /usr/lib/xfce4/notifyd/xfce4-notifyd
exec --no-startup-id /usr/lib/xdg-desktop-portal-gtk
exec --no-startup-id xfce4-power-manager
exec --no-startup-id xfce4-clipman
exec --no-startup-id picom --backend glx --vsync 
exec --no-startup-id nitrogen --restore


